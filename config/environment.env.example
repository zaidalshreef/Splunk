# Splunk Home Lab - Environment Configuration
# Copy this file to environment.env and modify as needed

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Splunk Indexer (Main server)
INDEXER_IP=10.10.10.114
INDEXER_HOSTNAME=mgr-1

# Forwarder Nodes (space-separated list)
FORWARDER_IPS="10.10.10.115 10.10.10.116 10.10.10.117 10.10.10.118"
FORWARDER_HOSTNAMES="mgr-2 mgr-3 worker-1 node1"

# =============================================================================
# AUTHENTICATION
# =============================================================================

# SSH Key for accessing nodes
SSH_KEY_PATH=~/.ssh/key_10.10.10.114

# SSH User (usually root for Docker operations)
SSH_USER=root

# Splunk Admin Credentials
SPLUNK_ADMIN_USER=admin
SPLUNK_ADMIN_PASSWORD=SplunkAdmin@2025

# HEC Token for HTTP Event Collector
SPLUNK_HEC_TOKEN=a1b2c3d4-e5f6-7890-abcd-ef1234567890

# =============================================================================
# PORTS
# =============================================================================

# Splunk Web UI
SPLUNK_WEB_PORT=8000

# Splunk Management Port
SPLUNK_MGMT_PORT=8089

# Splunk Receiving Port (for forwarders)
SPLUNK_RECV_PORT=9997

# HTTP Event Collector Port
SPLUNK_HEC_PORT=8088

# Syslog UDP Port
SPLUNK_SYSLOG_PORT=514

# =============================================================================
# DATA PATHS
# =============================================================================

# Splunk Enterprise data directory on indexer
SPLUNK_DATA_DIR=/opt/splunk

# Splunk Universal Forwarder data directory on forwarders
SPLUNKUF_DATA_DIR=/opt/splunkforwarder

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Splunk Enterprise Docker image
SPLUNK_IMAGE=splunk/splunk:latest

# Splunk Universal Forwarder Docker image
SPLUNK_UF_IMAGE=splunk/universalforwarder:latest

# Container names
SPLUNK_CONTAINER_NAME=splunk-enterprise
SPLUNK_UF_CONTAINER_NAME=splunk-uf

# =============================================================================
# INDEXES
# =============================================================================

# Custom indexes to create
SPLUNK_INDEXES="docker linux security network syslog"

# =============================================================================
# LOG COLLECTION
# =============================================================================

# Log files to monitor (space-separated)
MONITOR_LOGS="/var/log/syslog /var/log/auth.log /var/log/kern.log"

# Enable Docker Swarm monitoring (true/false)
ENABLE_SWARM_MONITOR=true

# Swarm monitor interval in seconds
SWARM_MONITOR_INTERVAL=60

